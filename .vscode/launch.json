    "version": "0.2.0",
    "configurations": [

        {
            "name": "deepnado",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/deepnado",
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["-v", "-c", "./src/deepnado/config/example_train_config.json", "-d", "./tests/unit/resources"]
        },
        {
            "name": "Plot Example",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/plot_example.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
